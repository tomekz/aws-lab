{
  "family": "service",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::925303156481:role/lab-kafka-ecs-service-execution-task-role",
  "containerDefinitions": [
    {
      "name": "hello-service",
      "image": "925303156481.dkr.ecr.eu-central-1.amazonaws.com/lab-kafka-ecr:v0.0.1",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "lab-kafka-ecs-service-logs",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "hello-service"
        }
      },
      "environment": [
        {
          "name": "KAFKA_BOOTSTRAP_SERVERS",
          "value": "b-1.lab-kafka-ecs-cluster.4xqj2c.c4.kafka.eu-central-1.amazonaws.com:9092,b-2.lab-kafka-ecs-cluster.4xqj2c.c4.kafka.eu-central-1.amazonaws.com:9092,b-3.lab-kafka-ecs-cluster.4xqj2c.c4.kafka.eu-central-1.amazonaws.com:9092"
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ]
}
